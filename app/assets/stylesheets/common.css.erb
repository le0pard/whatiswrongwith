html {
  min-height: 100%;
  height: 100%;
}

body {
  min-height: 100%;
  height: 100%;
  background: #000;
  color: #fff;
  cursor: pointer;
  font-family: "Times";
  font-size: 18px;
}

textarea, .textarea {
  border: none;
  width: 100%;
  height: 200px;
  z-index: 2;
  resize: none;
  background-color: transparent;
  color: #fff;
  position: relative;
  cursor: text;
}

.tooltip {
  width: 30px;
  font-size: 9px;
  padding: 0px 1px;
  margin-left: 2px;
  margin-top: -2px;
  visibility: visible;
  display: none;
  font-family: Verdana;
  white-space: nowrap;
}

div.content {
  padding: 20% 0 0;
  width: 30%;
  margin: 0 auto;
}

.textarea span {
  position: relative;
}
.counter {
  position: absolute;
  top: 0;
  left: 0;
  display: block;
  display: none;
  font-size: 10px;
  padding: 0px 1px;
}
span.cursor {
  position: relative;
  width: 1px;
}